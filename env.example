# STEWARD Environment Variables
# Copy this file to .env and update with your actual values

# Flask Configuration
# IMPORTANT: In production, SECRET_KEY and JWT_SECRET_KEY MUST be set to strong random values
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=your-secret-key-change-in-production
JWT_SECRET_KEY=your-jwt-secret-key-change-in-production
DATABASE_URL=sqlite:///wealthwise.db

# Email Configuration (for password reset functionality)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=true
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password
MAIL_DEFAULT_SENDER=noreply@steward.com

# Development Settings
FLASK_ENV=development
FLASK_DEBUG=true

# Session Security (set to true when using HTTPS in production)
SESSION_COOKIE_SECURE=false

# Subscriptions
SUBSCRIPTIONS_ENABLED=true
ENFORCE_PAYMENT_AFTER_TRIAL=false
TRIAL_DAYS=30
DEFAULT_CURRENCY=ZAR

# PayFast
PAYFAST_MERCHANT_ID=
PAYFAST_MERCHANT_KEY=
PAYFAST_PASSPHRASE=
PAYFAST_TEST_MODE=true
PAYFAST_RETURN_URL=http://localhost:5000/payfast/return
PAYFAST_CANCEL_URL=http://localhost:5000/payfast/cancel
PAYFAST_NOTIFY_URL=http://localhost:5000/api/subscriptions/webhook/payfast

# Admin Portal Credentials (REQUIRED for admin access)
# Set these to secure your admin portal. DO NOT use defaults in production.
ADMIN_USERNAME=admin
# Use ADMIN_PASSWORD_HASH (preferred) - generate with: python -c "from werkzeug.security import generate_password_hash; print(generate_password_hash('your-password'))"
ADMIN_PASSWORD_HASH=pbkdf2:sha256:600000$...
# Legacy: ADMIN_PASSWORD (plain text - not recommended, use ADMIN_PASSWORD_HASH instead)
# ADMIN_PASSWORD=your-secure-admin-password-here